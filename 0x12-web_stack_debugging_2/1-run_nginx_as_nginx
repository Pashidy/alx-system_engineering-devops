#!/bin/bash
# Bash script to configure Nginx to run as nginx user and listen on all active IPs on port 8080

# Update nginx user in nginx.conf
sed -i 's/^user .*/user nginx;/' /etc/nginx/nginx.conf

# Update nginx listen directive to listen on all active IPs on port 8080
sed -i 's/^.*listen .*$/    listen 0.0.0.0:8080;/' /etc/nginx/sites-available/default

# Restart Nginx service to apply changes
service nginx restart
