#!/bin/bash

# Check if running as root
if [[ $EUID -ne 0 ]]; then
   echo "This script must be run as root." 
   exit 1
fi

# Configure localhost to resolve to 127.0.0.2
echo "127.0.0.2 localhost" >> /etc/hosts

# Configure facebook.com to resolve to 8.8.8.8
echo "8.8.8.8 facebook.com" >> /etc/hosts

echo "Configuration complete. /etc/hosts file updated."

# Restart networking or Docker containers if needed
read -p "Do you want to restart networking or Docker containers to apply changes? (y/n): " response
if [ "$response" == "y" ]; then
    systemctl restart networking
    systemctl restart docker
    echo "Networking and Docker containers restarted."
fi
